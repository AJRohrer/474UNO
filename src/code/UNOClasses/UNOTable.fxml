<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.UNOClasses.UNOTableController">
    <children>
        <VBox prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: green;" />
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="500.0" style="-fx-background-color: orange;" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="400.0">
            <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Turn options:" />
                <Button mnemonicParsing="false" text="Play card">
                    <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" text="Pass turn">
                    <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" text="Draw card">
                    <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" text="Call UNO!">
                    <VBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: yellow;" AnchorPane.topAnchor="400.0">
            <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose number of computer players (1-9)">
               <VBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
            </Text>
            <Spinner fx:id="numberOfPlayersSpinner" prefHeight="27.0" prefWidth="74.0">
               <VBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
            </Spinner>
            <Button mnemonicParsing="false" text="Submit number of players">
               <VBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
            </Button>
                <Button mnemonicParsing="false" text="Start new game">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
